    "version": "2.0.0",
    "tasks": [
        {
            "label": "React app launch",
            "type": "shell",
            "command": "npm start",
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "group": "Server"
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "Storybook launch",
            "type": "shell",
            "command": "npm run storybook",
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "group": "Server"
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "Test suite launch",
            "type": "shell",
            "command": "npm test -- --watchAll",
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "group": "Server"
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        }
